<%= simple_form_for(@profile), defaults: { :required => true, input_html: { class: 'form-control' } } do |f| %>
  <%= f.error_notification %>

  <%= f.input :first_name, :autofocus => true %>
  <%= f.input :last_name %>
  <%= f.input :secondary_email, :required => false %>
  <%= f.input :phone %>
  <%= f.input :gender %>
  <%= f.input :ethnicity %>
  <%= f.input :age %>
  <%= f.input :class_year %>
  <%= f.input :total_years %>
  <%= f.input :year_started %>
  <%= f.input :current_gpa %>
  <%= f.input :years_resident %>
  <%= f.input :profession %>

  <%= f.button :submit, 'Save', class: 'btn btn-small btn-primary' %>
<% end %>
