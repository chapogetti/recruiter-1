#add-new-modal.modal.fade
  .modal-dialog
    .modal-content
      = form_tag(managers_path, method: :post, remote: true, class: "form-horizontal") do
        .modal-header
          button.close aria-hidden="true" data-dismiss="modal" type="button"
            | &times;
          h4.modal-title Find & Add New Manager
        .modal-body
          #cred.form-group
            .col-sm-12
              = text_field_tag :cred, nil, class: 'form-control', placeholder: 'G# or Email'
              small id="cred-error" class="help-block invisible"
          .form-group
            .col-sm-12
              = select_tag :type, options_for_select(%w[Administrator Experimenter], 'Experimenter'), class: 'form-control selectpicker'
        .modal-footer
          button type='submit' class='btn btn-small btn-primary' Add

